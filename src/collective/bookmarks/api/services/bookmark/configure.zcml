<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:plone="http://namespaces.plone.org/plone">

  <plone:service
    method="GET"
    for="zope.interface.Interface"
    factory=".get.BookmarkGet"
    name="@bookmark"
    permission="zope2.View"
    />

  <plone:service
    method="POST"
    for="zope.interface.Interface"
    factory=".post.BookmarkPost"
    name="@bookmark"
    permission="zope2.View"
    />

</configure>
